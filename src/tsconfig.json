{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "types": [
      "vite/client",
      "@intlify/vite-plugin-vue-i18n/client",
    ],
    "typeRoots": [],
    "lib": ["ESNext", "DOM", "WebWorker"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.vue", "**/*.ts"]
}
