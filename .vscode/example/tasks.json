{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": {
            "regexp": ""
          },
          "background": {
            "beginsPattern": "dev server running at:",
            "endsPattern": "ready in \\d+ms",
            "activeOnStart": true
          }
        }
      ],
      "path": "package.json",
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
